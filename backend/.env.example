# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# MongoDB connection string - MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/arogyax?retryWrites=true&w=majority

# Cloudinary configuration
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_NAME=your_cloudinary_name

# Payment gateway keys (use test keys for development)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
STRIPE_SECRET_KEY=your_stripe_secret_key

# JWT Secret (use a strong secret for production)
JWT_SECRET=your_strong_jwt_secret_here

# Currency
CURRENCY=inr

# Admin credentials
ADMIN_EMAIL=admin@arogya-x.com
ADMIN_PASSWORD=your_secure_admin_password

# Port (Render will set this automatically)
PORT=4000
